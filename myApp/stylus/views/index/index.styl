/* - - - - - - - - - - - - - - - - */	
.vHome_dHeader
	background-color #e7e7e6
	
.vHome_bHeader
	font-size 0
	width 960px
	margin 0 auto
	box-sizing border-box
	height 160px
	padding-top 30px
	padding-bottom 30px
	
.vHome_bHeader_eImage
	display inline-block
	width 200px
	height 100px
	vertical-align bottom
	margin-right 56px

.vHome_bSearch
	display inline-block 
	vertical-align bottom

.vHome_bSearch_eInput
	font-size 15px
	font-weight bold
	padding 0
	padding-left 20px
	box-sizing border-box
	float left
	width 450px
	height 50px
	border 0
	background-color white
	margin-right 54px

.vHome_bSearch_eButton 
	float left
	border none
	width 200px
	height 50px
	padding 0
	i
	span
		font-size 15px
	span
		text-transform uppercase
	i
		margin-left 10px

/* - - - - - - - - - - - - - - - - */	
.vHome_dTopNav
	background-color #d9d9d8

.vHome_bTopNav
	margin 0
	height 50px
	width 960px
	margin 0 auto
	padding 0
	
.vHome_bTopNav_eItem
	float left
	list-style none
	
.vHome_bTopNav_eItemTarget
	font-size 12px
	font-weight bold
	text-align center
	width 120px
	display block
	height 50px
	color black
	text-decoration none
	line-height 50px
	&:hover 
		background-color darken(#d9d9d8,10%)	
		
/* - - - - - - - - - - - - - - - - */	
.vHome_bGalleryItem
	float left
	width 180px
	box-shadow 0 3px 0 0 #d4d4d5,0 0 0 1px #d4d4d5
	margin-right 56px
	margin-top 40px
	
.vHome_bGallery
	width 960px 
	margin 0 auto
	margin-bottom 30px
	//margin-top 46px

.vHome_bGalleryItemDescription	
	padding 10px
	span
		display block
		color #c9cacb
		font-size 14px
	.title
		font-weight bold
		font-size 14px
		color black
		

/* - - - - - - - - - - - - - - - - */
.uCf
	&:before
	&:after
		content " "
		display table

.uCf:after
	clear both
	
.uCf
	*zoom 1 